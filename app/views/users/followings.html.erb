<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-9">
    <% if @followings.any? %>
      <h3>Followings (<%= @followings.count %>)</h3>
        <%= render @followings %>
    <% end %>
  </div>
</div>