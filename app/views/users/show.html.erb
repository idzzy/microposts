<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>

</div>


<div class="container">
  <div class="row">
    <div class="col-md-2">
      <strong>Email</strong>
    </div>
    <div class="col-md-4">
      <%= @user.email %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <strong>Profile</strong>
    </div>
    <div class="col-sm-4">
      <%= @user.profile %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <strong>Location</strong>
    </div>
    <div class="col-sm-4">
      <%= @user.location %>
    </div>
  </div>
</div>
