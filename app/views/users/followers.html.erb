<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
     <% if @user.followers.any? %>
      <h3>Followers (<%= @user.followers.count %>)</h3>
      <ol">
        <%= render @followers %>
      </ol>
    <% end %>
  </div>

</div>